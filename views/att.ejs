<!-- head` -->
<%- include("includes/head") %>

<!-- sidebar -->
<%- include("includes/sidebar") %>

<!-- img -->
<%- include("includes/img") %>

<!-- content box  -->
<div class="h-100 text-center">
  <!-- clock -->
  <p id="realTimeClock" class="display-4"></p>
  <div>
    <!-- submit btn -->
    <form action="" class="">
      <input type="submit" class="rounded b-no bg-warning <%=
                ((btnVisible && !clockOutState) ?"":"d-none") %>" _+ value="Clock Out" /> <input type="submit" class="rounded b-no
                bg-warning <%= ((btnVisible && !clockInState) ?"":"d-none") %>" value="Clock In" />
    </form>
    <hr>
    <!-- table  -->
    <table class="table rounded ">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Clock In</th>
          <th scope="col">Reason</th>
          <th scope="col">Clock Out</th>
          <th scope="col">Reason</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>date</td>
          <td>in</td>
          <td>Reason</td>
          <td>out</td>
          <td>Reason</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- foot -->
<%- include("includes/foot") %>